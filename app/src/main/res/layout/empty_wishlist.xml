<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newBackGroundColor"
    android:orientation="vertical">

    <include layout="@layout/dental_valet_header"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/newDarkBlue"
        android:textColor="@color/appWhite"
        android:text="@string/wishlist"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="100dp"
        android:layout_gravity="center_vertical"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/appblue"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:text="You currently have no treatment plan "
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/appblue"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:text="once you visit your dentist and ADD"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/appblue"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:text="SERVICES you are interested into your"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/appblue"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:text="WISHLIST your dentist will create your"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/appblue"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:text="treatment plan."
            android:layout_height="wrap_content" />


    </LinearLayout>


    <include layout="@layout/notification_refer_button"/>



</LinearLayout>